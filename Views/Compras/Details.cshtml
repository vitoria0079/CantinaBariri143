@model CantinaBariri143.Models.Compras

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh; margin-top:60px;">
    <div class="w-100" style="max-width: 500px;">

        <div class="border rounded p-3" style="box-shadow:5px 5px 20px; background-color: #fff;">
            <h1 class="text-center mb-4">Detalhes</h1>
            <hr />
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Fornecedores)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Fornecedores.RazaoSocial)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Alimentos)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Alimentos.Descricao)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PrecoUnitario)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PrecoUnitario)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DataCompra)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataCompra)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.QtdUnitaria)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.QtdUnitaria)
                </dd>
                <dt>Total</dt>
                <dd>@((Model.PrecoUnitario * Model.QtdUnitaria).ToString("C2"))</dd>

            </dl>

            <div class="row justify-content-between">
                <div class="col-5 mt-3">
                    <div class="form-group">
                        <a asp-action="Edit" asp-route-id="@Model?.ComprasId" class="btn btn-danger text-light w-100 p-2">Editar</a>
                    </div>
                </div>

                <div class="col-5 mt-3">
                    <div>
                        <a asp-action="Index" type="button" class="btn btn-danger text-light w-100 p-2">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>