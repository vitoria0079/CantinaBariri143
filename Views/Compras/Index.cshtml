@model IEnumerable<CantinaBariri143.Models.Compras>

@{
    ViewData["Title"] = "Index";
}

<h1>Compras</h1>

<div class="row mt-5 mb-3">
    <div class="col-3">
        <a asp-action="Create" class="btn btn-outline-danger w-100"><i class="bi bi-plus-circle"></i> Adicionar</a>
    </div>

    <div class="col-9">
        <!-- Campo de Busca -->
        <form asp-action="Search" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Buscar..." />
                <button type="submit" class="btn btn-outline-danger"><i class="bi bi-search"></i> Buscar</button>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Fornecedores)</th>
            <th>@Html.DisplayNameFor(model => model.Alimentos)</th>
            <th>@Html.DisplayNameFor(model => model.PrecoUnitario)</th>
            <th>@Html.DisplayNameFor(model => model.DataCompra)</th>
            <th>@Html.DisplayNameFor(model => model.QtdUnitaria)</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Fornecedores.RazaoSocial)</td>
                <td>@Html.DisplayFor(modelItem => item.Alimentos.Descricao)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecoUnitario)</td>
                <td>@Html.DisplayFor(modelItem => item.DataCompra)</td>
                <td>@Html.DisplayFor(modelItem => item.QtdUnitaria)</td>
                <td>@((item.PrecoUnitario * item.QtdUnitaria).ToString("C2"))</td>
                <td>
                    <a asp-action="Edit" type="button" class="btn btn-dark text-light" asp-route-id="@item.ComprasId">Editar</a>
                    <a asp-action="Details" type="button" class="btn btn-dark text-light" asp-route-id="@item.ComprasId">Detalhes</a>
                    <a asp-action="Delete" type="button" class="btn btn-dark text-light" asp-route-id="@item.ComprasId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>

</table>
