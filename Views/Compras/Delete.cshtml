@model CantinaBariri143.Models.Compras

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<div>
    <h4>Compras</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedores)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fornecedores.RazaoSocial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alimentos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alimentos.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoUnitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCompra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCompra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QtdUnitaria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QtdUnitaria)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ComprasId" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index">Voltar</a>
    </form>
</div>
