@model CantinaBariri143.Models.Vendas

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Vendas</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clientes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clientes.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pedidos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pedidos.AlimentosId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>

    @if (ViewBag.PedidosDaVenda != null)
    {
        <h4>Pedidos desta venda</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Alimento</th>
                    <th>Quantidade</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pedido in (IEnumerable<CantinaBariri143.Models.Pedidos>)ViewBag.PedidosDaVenda)
                {
                    <tr>
                        <td>@pedido.AlimentosId</td>
                        <td>@pedido.Qtd</td>
                        <td>@pedido.Total</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>