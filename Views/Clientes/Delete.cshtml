@model CantinaBariri143.Models.Clientes

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="w-100" style="max-width: 500px;">

        <div class="border rounded p-3" style="box-shadow:5px 5px 20px; background-color: #fff;">
            <h1 class="text-center mb-4">Deletar</h1>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CPF)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CPF)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Restricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Restricao)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="ClientesId" />
                <div class="row justify-content-between">
                    <div class="col-5 mt-3">
                        <input type="submit" value="Deletar" class="btn btn-danger text-light w-100 p-2" />
                    </div>

                    <div class="col-5 mt-3">
                        <a asp-action="Index" class="btn btn-danger text-light w-100 p-2">Voltar </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
