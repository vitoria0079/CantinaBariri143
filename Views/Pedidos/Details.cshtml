@model CantinaBariri143.Models.Pedidos

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Pedidos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alimentos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alimentos.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Qtd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Qtd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-2 mt-3">
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model?.PedidosId" class="btn btn-danger text-light w-100 p-2">Editar</a>
        </div>
    </div>

    <div class="col-2 mt-3">
        <div>
            <a asp-action="Index" type="button" class="btn btn-danger text-light w-100 p-2">Voltar</a>
        </div>
    </div>
</div>
