@model CantinaBariri143.Models.Alimentos

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar</h1>

<h4>Alimentos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoUnitario" class="control-label"></label>
                <input asp-for="PrecoUnitario" class="form-control" />
                <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Validade" class="control-label"></label>
                <input asp-for="Validade" class="form-control" />
                <span asp-validation-for="Validade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdEstoque" class="control-label"></label>
                <input asp-for="QtdEstoque" class="form-control" />
                <span asp-validation-for="QtdEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restricoes" class="control-label"></label>
                <input asp-for="Restricoes" class="form-control" />
                <span asp-validation-for="Restricoes" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 mt-3">
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger text-light w-100 p-2" value="Criar" />
                    </div>
                </div>

                <div class="col-6 mt-3">
                    <div>
                        <a asp-action="Index" type="button" class="btn btn-danger text-light w-100 p-2">Voltar</a>
                    </div>
                </div>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
