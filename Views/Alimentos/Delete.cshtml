@model CantinaBariri143.Models.Alimentos

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="w-100" style="max-width: 500px;">
        <div class="border rounded p-3" style="box-shadow:5px 5px 20px; background-color: #fff;">
            <h1 class="text-center mb-4">Deletar</h1>
            <hr />
            <dl>
                <dt>@Html.DisplayNameFor(model => model.Descricao)</dt>
                <dd>@Html.DisplayFor(model => model.Descricao)</dd>

                <dt>@Html.DisplayNameFor(model => model.PrecoUnitario)</dt>
                <dd>@Html.DisplayFor(model => model.PrecoUnitario)</dd>

                <dt>@Html.DisplayNameFor(model => model.Validade)</dt>
                <dd>@Html.DisplayFor(model => model.Validade)</dd>

                <dt>@Html.DisplayNameFor(model => model.QtdEstoque)</dt>
                <dd>@Html.DisplayFor(model => model.QtdEstoque)</dd>

                <dt>@Html.DisplayNameFor(model => model.Restricoes)</dt>
                <dd>@Html.DisplayFor(model => model.Restricoes)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="AlimentosId" />
                <div class="row justify-content-between">
                    <div class="col-5 mt-3">
                        <button type="submit" class="btn btn-danger w-100 p-2">Excluir</button>
                    </div>
                    <div class="col-5 mt-3">
                        <a asp-action="Index" class="btn btn-danger w-100 p-2">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

